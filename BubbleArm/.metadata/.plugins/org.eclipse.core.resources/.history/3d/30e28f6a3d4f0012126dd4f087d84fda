#ifndef PID_H_
#define PID_H_

#include "type.h"

typedef struct
{
	int   epsilon;
	int   max;
	int   min;
	float kp[2];
	float ki;
	float kd;
	int   pre_error;
	float integral;
	int   setpoint;
	int   setpointMax;
	int   setpointMid;
	int   setpointMin;
	int   output;
} PIDParam;

#define MAX     65535
#define MIN     0
#define EPSILON 2

#define KP   20
#define KI   0
#define KD   0


void ControlInit(void);
void SetSpeeds(uint32_t* values);
void SetTemperatures(uint16_t* values,uint32_t m);
void Control(uint32_t* flowrates);
void prvControlTask(void *pvParameters);

#endif
